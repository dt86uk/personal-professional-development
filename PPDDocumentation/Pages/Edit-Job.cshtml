@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PPDDocumentation.Pages.EditJobModel
@{
    ViewData["Title"] = "Edit Job";
}

<h1>Edit Job</h1>

<form method="post">

    <div>
        <div class="row pb-1">
            <div class="col-2">
                <label id="lblTitle">Title*</label>
            </div>
            <div class="col-9">
                <input class="col-9" asp-for="EditModel!.Title" />
                <span asp-validation-for="EditModel!.Title" class="text-danger"></span>
                <input hidden asp-for="EditModel!.Id" />
            </div>
        </div>

        <div class="row pb-1">
            <div class="col-2">
                <label id="lblDescription">Description*</label>
            </div>
            <div class="col-9">
                <input class="col-9" asp-for="EditModel!.Description" />
                <span asp-validation-for="EditModel!.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row pb-1">
            <div class="col-2">
                @Html.LabelFor(p => p.EditModel!.IsComplete)
            </div>
            <div class="col-9">
                @Html.CheckBoxFor(p => p.EditModel!.IsComplete)
            </div>
        </div>

        <div class="row pb-1">
            <div class="col-2">
                @Html.LabelFor(p => p.EditModel!.IsDeleted)
            </div>
            <div class="col-9">
                @Html.CheckBoxFor(p => p.EditModel!.IsDeleted)
            </div>
        </div>

        <input class="btn btn-primary" type="submit" value="Update Job" />
    </div>
</form>